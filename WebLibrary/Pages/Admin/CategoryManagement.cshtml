@page
@model WebLibrary.Pages.Admin.CategoriesModel
@{
    ViewData["Title"] = "分类管理";
}

@if (Model.ErrorMessage != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @Model.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="d-flex justify-content-between mb-3">
    <h5 class="text-success">分类列表</h5>
    <button class="btn btn-success"
            data-bs-toggle="modal"
            data-bs-target="#categoryModal"
            onclick="openCreateModal()">
        + 新增分类
    </button>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>分类 ID</th>
            <th>分类名称</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model.Categories)
        {
            <tr>
                <td>@c.CategoryId</td>
                <td>@c.CategoryName</td>
                <td>
                    <button class="btn btn-sm btn-outline-success"
                            data-bs-toggle="modal"
                            data-bs-target="#categoryModal"
                            onclick="openEditModal(@c.CategoryId, '@(c.CategoryName.Replace("'", "\\'"))')">
                        编辑
                    </button>
                    <form method="post" asp-page-handler="Delete"
                          asp-route-id="@c.CategoryId" class="d-inline"
                          onsubmit="return confirm('确认删除该分类？');">
                        <button type="submit" class="btn btn-sm btn-outline-danger">删除</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- 分类 Modal -->
<div class="modal fade" id="categoryModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-sm modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="categoryModalLabel">新增分类</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="categoryForm" method="post" class="row g-3">
                    <input type="hidden" id="CategoryId" name="id" />
                    <div class="col-md-12">
                        <label for="CategoryName" class="form-label">分类名称 *</label>
                        <input id="CategoryName" name="categoryName" class="form-control" required />
                    </div>
                    <div class="col-12 text-end">
                        <button type="submit" id="modalSubmit" class="btn btn-success">保存</button>
                        <button type="button" class="btn btn-secondary ms-2" data-bs-dismiss="modal">取消</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function openCreateModal() {
            document.getElementById('categoryForm').action = '?handler=Create';
            document.getElementById('categoryModalLabel').innerText = '新增分类';
            document.getElementById('CategoryId').value = '';
            document.getElementById('CategoryName').value = '';
        }

        function openEditModal(id, name) {
            document.getElementById('categoryForm').action = '?handler=Edit';
            document.getElementById('categoryModalLabel').innerText = '编辑分类';
            document.getElementById('CategoryId').value = id;
            document.getElementById('CategoryName').value = name;
        }
	</script>
	<script>
		const errMsg = '@Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.ErrorMessage ?? ""))';
		const errorFrom = '@Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.ErrorModal ?? ""))';

		if (errMsg && errMsg !== '""') {
			// 不需要弹任何模态框时，errorFrom 设 "none" 或 ""
			if (errorFrom !== '"delete"' && errorFrom !== '"create"' && errorFrom !== '"edit"') return;

			const modalId = errorFrom === '"create"' ? 'createCategoryModal' :
							errorFrom === '"edit"'   ? 'editCategoryModal'   : '';
			if (!modalId) return;          // 不弹窗
			new bootstrap.Modal(document.getElementById(modalId)).show();
		}
	</script>

}


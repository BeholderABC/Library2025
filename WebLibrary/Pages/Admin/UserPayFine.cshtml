@page
@model WebLibrary.Pages.Admin.UserPayFineModel
@{
    ViewData["Title"] = "用户罚款缴纳";
}

<div class="d-flex justify-content-between mb-3">
    <h4 class="text-primary">用户罚款缴纳</h4>
    <a asp-page="/Admin/Dashboard" class="btn btn-outline-secondary">返回控制台</a>
</div>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- User Search Section -->
<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0">搜索用户</h5>
    </div>
    <div class="card-body">
        <form method="post" asp-page-handler="SearchUser">
            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="SearchUserId" class="form-label">用户ID</label>
                    <input asp-for="SearchUserId" class="form-control" placeholder="输入用户ID">
                </div>
                <div class="col-md-6">
                    <label asp-for="SearchUserName" class="form-label">用户名</label>
                    <input asp-for="SearchUserName" class="form-control" placeholder="输入用户名">
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">搜索用户</button>
                    <small class="text-muted ms-3">提示：可以通过用户ID或用户名搜索</small>
                </div>
            </div>
        </form>
    </div>
</div>

@if (Model.SelectedUser != null)
{
    <!-- Selected User Info -->
    <div class="card mb-4">
        <div class="card-header bg-light d-flex justify-content-between align-items-center">
            <h5 class="mb-0">当前用户信息</h5>
            <a href="/Admin/UserPayFine" class="btn btn-sm btn-outline-secondary">
                <i class="fas fa-search me-1"></i>搜索其他用户
            </a>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <strong>用户ID：</strong>@Model.SelectedUser.UserId
                </div>
                <div class="col-md-4">
                    <strong>用户名：</strong>@Model.SelectedUser.UserName
                </div>
                <div class="col-md-4">
                    <strong>邮箱：</strong>@Model.SelectedUser.Email
                </div>
            </div>
        </div>
    </div>

    <!-- User's Borrowed Books -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">用户借阅记录</h5>
            <form method="post" asp-page-handler="SearchUser" style="display:inline;">
                <input type="hidden" asp-for="SearchUserId" value="@Model.SelectedUser.UserId" />
                <input type="hidden" asp-for="CurrentUserId" value="@Model.SelectedUser.UserId" />
                <button type="submit" class="btn btn-sm btn-outline-primary">
                    <i class="fas fa-sync-alt me-1"></i>刷新记录
                </button>
            </form>
        </div>
        <div class="card-body">
            @{
                var totalFine = Model.UserBorrowingBooks?.Sum(b => b.Fine) ?? 0;
                var overdueCount = Model.UserBorrowingBooks?.Count(b => b.Fine > 0) ?? 0;
            }
            @if (Model.UserBorrowingBooks != null && Model.UserBorrowingBooks.Count > 0)
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>书名</th>
                                <th>应还日期</th>
                                <th>逾期天数</th>
                                <th>状态</th>
                                <th>罚款金额</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var book in Model.UserBorrowingBooks)
                            {
                                <tr>
                                    <td>
                                        <strong>@book.BookTitle</strong>
                                    </td>
                                    <td>@book.DueDate.ToString("yyyy-MM-dd")</td>
                                    <td>
                                        @if (book.Delay.Days > 0)
                                        {
                                            <span class="text-danger">@book.Delay.Days 天</span>
                                        }
                                        else
                                        {
                                            <span class="text-success">0 天</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge @(book.Status == "正常" ? "bg-success" : book.Status.Contains("逾期") ? "bg-danger" : "bg-warning")">
                                            @book.Status
                                        </span>
                                    </td>
                                    <td>
                                        @if (book.Fine > 0)
                                        {
                                            <span class="text-danger fw-bold">¥@book.Fine</span>
                                        }
                                        else
                                        {
                                            <span class="text-success">¥0</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            @if (book.Fine > 0)
                                            {
                                                <form method="post" asp-page-handler="PayFine" asp-route-copyId="@book.CopyId" asp-route-userId="@Model.SelectedUser.UserId" style="display:inline;">
                                                    <input type="hidden" asp-for="CurrentUserId" value="@Model.SelectedUser.UserId" />
                                                    <input type="hidden" asp-for="SearchUserId" />
                                                    <input type="hidden" asp-for="SearchUserName" />
                                                    <button type="submit" class="btn btn-sm btn-warning" 
                                                            onclick="return confirm('确认为用户支付 ¥@book.Fine 罚金吗？')">
                                                        <i class="fas fa-dollar-sign me-1"></i>支付罚金
                                                    </button>
                                                </form>
                                            }
                                            <form method="post" asp-page-handler="ReturnBook" 
                                                  asp-route-recordId="@book.RecordId" 
                                                  asp-route-copyId="@book.CopyId" 
                                                  asp-route-userId="@Model.SelectedUser.UserId" 
                                                  style="display:inline;">
                                                <input type="hidden" asp-for="CurrentUserId" value="@Model.SelectedUser.UserId" />
                                                <input type="hidden" asp-for="SearchUserId" />
                                                <input type="hidden" asp-for="SearchUserName" />
                                                <button type="submit" class="btn btn-sm btn-primary" 
                                                        onclick="return confirm('确认为用户归还《@book.BookTitle》吗？')"
                                                        @(book.Fine > 0 ? "disabled title='请先支付罚金'" : "")>
                                                    <i class="fas fa-undo me-1"></i>代为还书
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                
                @if (totalFine > 0)
                {
                    <div class="alert alert-warning mt-3">
                        <h6 class="alert-heading">
                            <i class="fas fa-exclamation-triangle me-2"></i>罚款统计
                        </h6>
                        <p class="mb-1">逾期图书数量：<strong>@overdueCount</strong> 本</p>
                        <p class="mb-0">总罚款金额：<strong class="text-danger">¥@totalFine</strong></p>
                    </div>
                }
            }
            else
            {
                <div class="text-center py-4">
                    <i class="fas fa-book-open fa-3x text-muted mb-3"></i>
                    <p class="text-muted">该用户暂无在借图书</p>
                </div>
            }
        </div>
    </div>
}
else
{
    <div class="text-center py-5">
        <i class="fas fa-search fa-3x text-muted mb-3"></i>
        <p class="text-muted">请先搜索用户以查看其借阅记录</p>
    </div>
}

@section Scripts {
    <script>
        // Auto-hide alerts after 5 seconds
        $(document).ready(function() {
            setTimeout(function() {
                $('.alert').fadeOut();
            }, 5000);
        });
    </script>
}

@page
@model WebLibrary.Pages.Admin.UserDetailsModel
<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body text-center">
                <div class="avatar-placeholder mb-3">
                    <i class="bi bi-person-circle" style="font-size: 5rem;"></i>
                </div>
                <h4>@Model.UserInfo.UserName</h4>
                <div class="mb-2">
                    <span class="badge 
                        @(Model.UserInfo.UserType == "学生" ? "bg-primary" : 
                          Model.UserInfo.UserType == "教师" ? "bg-success" : 
                          "bg-danger")">
                        @(Model.UserInfo.UserType)
                    </span>
                </div>
                <p class="text-muted">@Model.UserInfo.Email</p>
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <div class="card mb-4">
            <div class="card-header">基本信息</div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-4">
                        <strong>账户状态:</strong>
                    </div>
                    <div class="col-md-8">
                        @if (Model.UserInfo.IsActive)
                        {
                                <span class="badge bg-success">可用</span>
                        }
                        else
                        {
                                <span class="badge bg-warning">已禁用</span>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@page
@model WebLibrary.Pages.Books.BookDetailModel
@{
    ViewData["Title"] = "图书详情";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Message"]<button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]<button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row mb-4">
    <div class="col-md-4 col-lg-3 mb-4 mb-md-0">
        <div class="book-cover-container">
            <img src="/api/bookcover/@Model.Book?.BookId" alt="@Model.Book?.Title" class="book-cover-img" onerror="this.style.display='none'" />
        </div>
    </div>
    <div class="col-md-8 col-lg-9">
        <div class="book-detail-card card border-0 shadow-sm h-100">
            <div class="card-body">
                <h2 class="text-primary mb-3 fw-bold">@Model.Book?.Title</h2>
                
                <div class="book-meta mb-4">
                    <div class="d-flex align-items-center mb-2">
                        <i class="bi bi-person-circle me-2 text-secondary"></i>
                        <span class="fw-medium">作者：</span>
                        <span class="ms-1">@Model.Book?.Author</span>
                    </div>
                    <div class="d-flex align-items-center mb-2">
                        <i class="bi bi-upc-scan me-2 text-secondary"></i>
                        <span class="fw-medium">ISBN：</span>
                        <span class="ms-1">@Model.Book?.ISBN</span>
                    </div>
                    @if (!string.IsNullOrWhiteSpace(Model.Book?.Description))
                    {
                        <div class="mb-3">
                            <p class="mb-1 fw-medium">简介：</p>
                            <p class="text-muted lh-base">@Model.Book?.Description</p>
                        </div>
                    }
                    @if (Model.Book?.BookRating != null)
                    {
                        <div class="d-flex align-items-center mb-3">
                            <div class="rating-display">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <i class="bi bi-star@(i <= Model.Book.BookRating ? "-fill" : "") text-warning"></i>
                                }
                                <span class="ms-2 fw-semibold">@Model.Book.BookRating?.ToString("F1")</span>
                            </div>
                        </div>
                    }
                </div>

                <div class="availability-badges mb-4">
                    <span class="badge bg-success bg-opacity-10 text-success border border-success border-opacity-25 py-2 px-3 me-2">
                        <i class="bi bi-check-circle me-1"></i>可借副本：@Model.Book?.AvailableCopies
                    </span>
                    <span class="badge bg-secondary bg-opacity-10 text-secondary border border-secondary border-opacity-25 py-2 px-3">
                        <i class="bi bi-journal-bookmark me-1"></i>馆藏总量：@Model.Book?.TotalCopies
                    </span>
                </div>

                <div class="action-buttons mt-4">
                    @if (Model.Book?.AvailableCopies > 0)
                    {
                        <form method="post" asp-page-handler="Borrow" asp-route-bookId="@Model.Book?.BookId" class="d-inline">
                            <button type="submit" class="btn btn-primary me-2 px-4 py-2 fw-medium">
                                <i class="bi bi-bookmark-check me-2"></i>立即借阅
                            </button>
                        </form>
                    }
                    else
                    {
                        <button type="button" class="btn btn-warning reservation-btn px-4 py-2 fw-medium" 
                                data-book-id="@Model.Book?.BookId" data-book-title="@Model.Book?.Title">
                            <i class="bi bi-calendar-plus me-2"></i>预约
                        </button>
                    }
                    <a href="/Books/Search" class="btn btn-outline-secondary ms-2 px-4 py-2">
                        <i class="bi bi-arrow-left me-2"></i>返回搜索
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- 预约 Modal -->
<div class="modal fade" id="reservationModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-light">
                <h5 class="modal-title fw-semibold"><i class="bi bi-calendar-check me-2"></i>预约确认</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body py-4">
                <p class="mb-3">您确定要预约该图书吗？</p>
                <div id="reservationBookInfo" class="fw-medium text-primary"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">取消</button>
                <button type="button" class="btn btn-primary" id="confirmReservationBtn">确认预约</button>
            </div>
        </div>
    </div>
</div>

<form id="reservationForm" method="post" asp-page-handler="Reserve" style="display:none;">
    <input type="hidden" name="bookId" id="reservationBookId" />
</form>

<!-- 评论区域 -->
<div class="row mt-5">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="text-primary fw-bold"><i class="bi bi-chat-left-text me-2"></i>读者评论</h4>
            <a asp-page="/Review/CreateReview" asp-route-bookId="@Model.Book?.BookId"
                asp-route-bookTitle="@Model.Book?.Title" asp-route-bookAuthor="@Model.Book?.Author"
                class="btn btn-primary btn-sm">
                <i class="bi bi-pencil-square me-1"></i> 发表评论
            </a>
        </div>

        @if (Model.Comments.Count > 0)
        {
            <div class="row g-3">
                @foreach (var comment in Model.Comments)
                {
                    <div class="col-12">
                        <div class="card comment-card shadow-sm border-0">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h6 class="card-subtitle mb-1 text-muted">@comment.Username</h6>
                                    <div class="rating text-warning" title="评分: @comment.Rating 星">
                                        @GetStars(comment.Rating)
                                    </div>
                                </div>
                                <p class="card-text comment-content mb-2">@comment.Content</p>
                                <small class="text-muted"><i
                                        class="bi bi-clock me-1"></i>@comment.CommentDate.ToString("yyyy-MM-dd HH:mm")</small>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-4">
                <i class="bi bi-chat-left-text display-6 text-muted"></i>
                <p class="mt-2 text-muted">暂无评论，成为第一个评论者吧！</p>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        document.querySelectorAll('.reservation-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                const id = btn.dataset.bookId;
                const title = btn.dataset.bookTitle;
                document.getElementById('reservationBookId').value = id;
                document.getElementById('reservationBookInfo').textContent = `图书：${title}`;
                new bootstrap.Modal(document.getElementById('reservationModal')).show();
            });
        });
        const confirmBtn = document.getElementById('confirmReservationBtn');
        if (confirmBtn) {
            confirmBtn.addEventListener('click', () => {
                document.getElementById('reservationForm').submit();
            });
        }
    </script>
}

@functions {
    string GetStars(int rating)
    {
        return new string('★', rating) + new string('☆', 5 - rating);
    }
}

<style>
    .book-detail-card {
        border-radius: 12px;
    }
    
    .book-cover-container {
        position: relative;
        overflow: hidden;
        border-radius: 10px;
    }
    
    .book-meta {
        border-left: 3px solid #e3f2fd;
        padding-left: 1rem;
    }
    
    .rating-display {
        font-size: 1.2rem;
    }
    
    .availability-badges .badge {
        border-radius: 8px;
        font-size: 0.9rem;
    }
    
    .action-buttons .btn {
        border-radius: 8px;
        transition: all 0.2s ease;
    }
    
    .action-buttons .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    
    .comment-card {
        border-radius: 10px;
        transition: transform 0.2s, box-shadow 0.2s;
    }

    .comment-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1) !important;
    }

    .comment-content {
        line-height: 1.6;
        color: #495057;
    }

    .rating {
        white-space: nowrap;
        font-size: 0.95rem;
    }
    
    .modal-content {
        border-radius: 12px;
        border: none;
    }
</style>
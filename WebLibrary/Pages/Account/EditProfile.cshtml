@page
@model WebLibrary.Pages.Account.EditProfileModel
@{
    ViewData["Title"] = "个人信息维护";
}

<!-- 使用与主页相同的背景样式 -->
<section class="section-full home-hero">
    <div class="section-inner">
        <!-- 添加标题区域，与主页标题风格一致 -->
        <div class="text-center text-light hero-top-section">
            <h1 class="display-4 mb-4">个人信息维护</h1>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-10 col-lg-8">
                <!-- 使用与主页相同的白色长方形区域样式 -->
                <div class="white-rectangle" style="height: auto; padding: 3rem;">
                    <div class="rectangle-content">
                        <div class="profile-card">
                            <div class="profile-card-body">
                                <!-- 使用单列布局 -->
                                <form method="post" class="needs-validation" novalidate style="max-width: 100%;" asp-page-handler="UserProfile">
                                    <h3>个人资料</h3>
                                    <!-- 用户名 -->
                                    <div class="profile-row">
                                        <div class="profile-label">用户名</div>
                                        <div class="profile-value">
                                            <input asp-for="UserName" class="form-control" />
                                            <span asp-validation-for="UserName" class="text-danger validation-message"></span>
                                        </div>
                                    </div>

                                    <!-- 邮箱（允许为空） -->
                                    <div class="profile-row">
                                        <div class="profile-label">邮箱</div>
                                        <div class="profile-value">
                                            <input asp-for="Email" type="email" class="form-control" />
                                            <span asp-validation-for="Email" class="text-danger validation-message"></span>
                                        </div>
                                    </div>
                                    <!-- 密码（可选） -->
                                    <div class="profile-row">
                                        <div class="profile-label">新密码（留空不修改）</div>
                                        <div class="profile-value">
                                            <input asp-for="NewPassword" type="password" class="form-control" id="password" />
                                            <span asp-validation-for="NewPassword" class="text-danger validation-message"></span>
                                        </div>
                                    </div>

                                    <div class="profile-row">
                                        <div class="profile-label">确认新密码</div>
                                        <div class="profile-value">
                                            <input asp-for="ConfirmPassword" type="password" class="form-control" id="confirmpassword" />
                                            <span asp-validation-for="ConfirmPassword" class="text-danger validation-message"></span>
                                        </div>
                                    </div>
                                    <!-- 按钮区域 -->
                                    <div class="button-container mt-5">
                                        <div class="d-flex w-100">
                                            <button type="submit" class="btn btn-success btn-lg flex-fill me-2 py-3">
                                                保存个人资料
                                            </button>
                                        </div>
                                        <hr />
                                    </div>
                                </form>
                                <form method="post" id="securityForm" asp-page-handler="SecurityQuestions" asp-antiforgery="true">
                                                <h3>密保问题</h3>
                                                <div class="form-group">
                                                    <div class="profile-row">
                                                        <div class="profile-label">问题1</div>
                                                        <div class="profile-value"><input asp-for="Question" class="form-control" id="Question" /></div>
                                                    </div>
                                                    <div class="profile-row">
                                                        <div class="profile-label">答案1</div>
                                                        <div class="profile-value"><input asp-for="Answer" class="form-control" id="answer" /></div>
                                                    </div>
                                                </div>

                                                 <button type="submit" class="btn btn-success btn-lg flex-fill me-2 py-3">保存密保问题</button>
                                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- 用来加载子页面 -->
<div id="securityQuestionsContainer" class="mt-3"></div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
    function updateAnswerState(questionId, answerId) {
        const q = document.getElementById(questionId);
        const a = document.getElementById(answerId);

        if (!q || !a) return;

        if (q.value.trim() === "") {
            a.value = "";
            a.disabled = true;
        } else {
            a.disabled = false;
        }
    }

    // 初始化（页面加载时）
    updateAnswerState("Question", "answer1");
    updateAnswerState("password", "confirmpassword");

    // 绑定事件监听
    document.getElementById("Question").addEventListener("input", () => {
        updateAnswerState("Question", "answer1");
    });


    document.getElementById("password").addEventListener("input", () => {
        updateAnswerState("password", "confirmpassword");
    });

    window.addEventListener('DOMContentLoaded', () => {
        setTimeout(() => {
            document.querySelectorAll('.auto-dismiss').forEach(el => {
                el.classList.add('fade');
                el.style.opacity = 0;
                setTimeout(() => el.remove(), 500); // 完全移除
            });
        }, 5000); // 5秒后淡出
    });
    document.getElementById("securityForm").addEventListener("submit", function (e) {
            const q = document.getElementById("question");
            const a = document.getElementById("answer");
            if (q && a && q.value.trim() !== "" && a.value.trim() === "") {
                e.preventDefault();
                alert(`请为密保问题填写答案！`);
                a.focus();
                return;
            }
        
    });
</script>

<style>
    /* 卡片内部布局优化 */
    .profile-card-body {
        padding: 2rem 3rem;
    }

    .profile-info-container {
        max-width: 700px;
        margin: 0 auto;
    }

    .profile-row {
        display: flex;
        align-items: center;
        margin-bottom: 2rem; /* 增加行间距 */
        padding: 1rem 0;
        border-bottom: 1px solid rgba(0, 0, 0, 0.08);
    }

    .profile-label {
        width: 180px; /* 增加标签宽度 */
        text-align: left;
        color: #0b3a75;
        font-weight: 600;
        font-size: 1.4rem; /* 增大字体 */
        margin-right: 2rem;
    }

    .profile-value {
        flex: 1;
        text-align: left;
        color: #333;
        font-size: 1.4rem; /* 增大字体 */
        display: flex;
        flex-direction: column;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        margin-bottom: 0.5rem; /* 增加文本框与错误提示的间距 */
    }

    .text-danger {
        color: #dc3545;
    }

    .validation-message {
        font-size: 0.9rem; /* 减小错误提示字体 */
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
        color: #fff;
    }

        .btn-success:hover {
            background-color: #218838;
            border-color: #218838;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        color: #fff;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #5a6268;
        }

    .ms-2 {
        margin-left: 0.5rem;
    }
</style>
}
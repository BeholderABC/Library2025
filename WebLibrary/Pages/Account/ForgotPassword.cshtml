@page
@model WebLibrary.Pages.Account.ForgotPasswordModel
@{
    ViewData["Title"] = "忘记密码";
    Layout = null;
}

<!doctype html>
<html>
<head>
    <title>找回密码 - 月落书院线上系统</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-image: url('/images/login_bg.JPG');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            background-attachment: fixed;
            font-family: "SimSun", "宋体", serif;
            min-height: 100vh;
        }
        .forgot-container {
            background-color: rgba(255, 255, 255, 0.95);
            padding: 3rem;
            border-radius: 20px;
            backdrop-filter: blur(10px);
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
            max-width: 450px;
            width: 100%;
        }
        .forgot-header {
            text-align: center;
            margin-bottom: 2rem;
        }
        .forgot-header h2 {
            color: #333;
            font-weight: bold;
            margin-bottom: 0.5rem;
        }
        .forgot-header .icon {
            font-size: 3rem;
            color: #6c757d;
            margin-bottom: 1rem;
        }
        .form-control {
            border-radius: 10px;
            border: 2px solid #e9ecef;
            padding: 12px 15px;
            font-size: 1rem;
            transition: all 0.3s ease;
        }
        .form-control:focus {
            border-color: #17a2b8;
            box-shadow: 0 0 0 0.2rem rgba(23, 162, 184, 0.25);
        }
        .btn-primary {
            background-color: #17a2b8;
            border: none;
            border-radius: 10px;
            padding: 12px 30px;
            font-size: 1.1rem;
            font-weight: 500;
            transition: all 0.3s ease;
            width: 100%;
        }
        .btn-primary:hover {
            background-color: #138496;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(23, 162, 184, 0.3);
        }
        .btn-secondary {
            background-color: #6c757d;
            border: none;
            border-radius: 10px;
            padding: 10px 20px;
            font-size: 1rem;
            font-weight: 500;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
        }
        .btn-secondary:hover {
            background-color: #5a6268;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(108, 117, 125, 0.3);
            text-decoration: none;
            color: white;
        }
        .btn-link {
            color: #6c757d;
            text-decoration: none;
            font-size: 0.9rem;
        }
        .btn-link:hover {
            color: #17a2b8;
        }
        .error-message {
            background-color: rgba(220, 53, 69, 0.1);
            border: 1px solid rgba(220, 53, 69, 0.2);
            border-radius: 8px;
            padding: 10px;
            margin-top: 1rem;
        }
        .info-box {
            background-color: rgba(23, 162, 184, 0.1);
            border: 1px solid rgba(23, 162, 184, 0.2);
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 1.5rem;
        }
        .info-box p {
            margin-bottom: 0;
            color: #17a2b8;
            font-size: 0.9rem;
        }
    </style>
</head>
<body class="d-flex align-items-center justify-content-center">
    <div class="forgot-container">
        <div class="forgot-header">
            <div class="icon">🔐</div>
            <h2>找回密码</h2>
            <p class="text-muted">请输入您的用户名</p>
        </div>
        
        <div class="info-box">
            <p><strong>提示：</strong>请确保您输入的用户名与注册时一致。</p>
        </div>
        
        <form method="post">
            <div class="mb-3">
                <label class="form-label fw-bold">用户名</label>
                <input asp-for="UserName" type="text" class="form-control" placeholder="请输入您的用户名" required />
                <span asp-validation-for="UserName" class="text-danger small"></span>
            </div>
            
            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary">确认</button>
            </div>
        </form>
        
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="error-message">
                <p class="text-danger mb-0">@Model.ErrorMessage</p>
            </div>
        }
        
        <div class="text-center mt-4">
            <a class="btn btn-secondary" href="/Account/Login">返回登录</a>
        </div>
        
        <div class="text-center mt-3">
            <p class="text-muted mb-0">还没有账号？ <a href="/Account/Register" class="btn-link">立即注册</a></p>
        </div>
    </div>
</body>
</html>

@page
@model WebLibrary.Pages.Review.IndexModel
@{
    ViewData["Title"] = "书评社区";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary"><i class="bi bi-chat-dots-fill me-2"></i>书评社区</h2>
        <div>
            <a asp-page="/Review/MyReviews" class="btn btn-outline-primary me-2">
                <i class="bi bi-person-lines-fill me-1"></i> 我的评论
            </a>
            <a asp-page="/Review/CreateReview" class="btn btn-primary">
                <i class="bi bi-pencil-square me-1"></i> 写书评
            </a>
        </div>
    </div>

    <div class="mb-4">
        <h4 class="text-primary mb-3"><i class="bi bi-stars me-2"></i>最新评论</h4>
        
        @if (Model.Comments.Count > 0)
        {
            <div class="row g-4">
                @foreach (var comment in Model.Comments)
                {
                    <div class="col-12">
                        <div class="review-card card h-100 shadow-sm">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h5 class="card-title text-truncate me-3" title="@comment.BookTitle">@comment.BookTitle</h5>
                                    <div class="rating text-warning fs-5" title="评分: @comment.Rating 星">
                                        @GetStars(comment.Rating)
                                    </div>
                                </div>
                                <p class="card-text comment-content">@comment.Content</p>
                                <div class="d-flex justify-content-between align-items-center mt-3">
                                    <small class="text-muted"><i class="bi bi-person-circle me-1"></i>@comment.Username</small>
                                    <small class="text-muted"><i class="bi bi-clock me-1"></i>@comment.CommentDate.ToString("yyyy-MM-dd HH:mm")</small>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-chat-square-text display-4 text-muted"></i>
                <p class="mt-3 text-muted">暂无评论，快来发表第一条书评吧！</p>
                <a asp-page="/Review/CreateReview" class="btn btn-primary mt-2">
                    <i class="bi bi-pencil-square me-1"></i> 写书评
                </a>
            </div>
        }
    </div>
</div>

@functions {
    string GetStars(int rating)
    {
        return new string('★', rating) + new string('☆', 5 - rating);
    }
}

<style>
    .review-card {
        border: none;
        border-radius: 12px;
        transition: transform 0.3s, box-shadow 0.3s;
    }
    
    .review-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1.5rem rgba(0, 0, 0, 0.1) !important;
    }
    
    .comment-content {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
        line-height: 1.6;
    }
    
    .rating {
        white-space: nowrap;
    }
</style>
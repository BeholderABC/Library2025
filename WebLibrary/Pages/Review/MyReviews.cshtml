@page
@model WebLibrary.Pages.Review.MyReviewsModel
@{
    ViewData["Title"] = "我的评论";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary"><i class="bi bi-person-lines-fill me-2"></i>我的评论</h2>
        <div>
            <a asp-page="/Review/Index" class="btn btn-outline-primary me-2">
                <i class="bi bi-arrow-left me-1"></i> 返回社区
            </a>
            <a asp-page="/Review/CreateReview" class="btn btn-primary">
                <i class="bi bi-pencil-square me-1"></i> 写书评
            </a>
        </div>
    </div>

    @if (Model.Comments.Count > 0)
    {
        <div class="row g-4">
            @foreach (var comment in Model.Comments)
            {
                <div class="col-12">
                    <div class="my-review-card card h-100 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title text-truncate me-3" title="@comment.BookTitle">@comment.BookTitle</h5>
                                <div class="rating text-warning fs-5" title="评分: @comment.Rating 星">
                                    @GetStars(comment.Rating)
                                </div>
                            </div>
                            <p class="card-text comment-content">@comment.Content</p>
                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <small class="text-muted"><i class="bi bi-clock me-1"></i>@comment.CommentDate.ToString("yyyy-MM-dd HH:mm")</small>
                                <div>
                                    <a asp-page="/Review/EditReview" asp-route-id="@comment.CommentId" class="btn btn-sm btn-outline-primary me-1">
                                        <i class="bi bi-pencil me-1"></i> 编辑
                                    </a>
                                    <form method="post" asp-page-handler="Delete" asp-route-id="@comment.CommentId" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('确定要删除这条评论吗？')">
                                            <i class="bi bi-trash me-1"></i> 删除
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-journal-plus display-4 text-muted"></i>
            <p class="mt-3 text-muted">您还没有发表过任何评论</p>
            <a asp-page="/Review/CreateReview" class="btn btn-primary mt-2">
                <i class="bi bi-pencil-square me-1"></i> 写书评
            </a>
        </div>
    }
</div>

@functions {
    string GetStars(int rating)
    {
        return new string('★', rating) + new string('☆', 5 - rating);
    }
}

<style>
    .my-review-card {
        border: none;
        border-radius: 12px;
        transition: transform 0.3s, box-shadow 0.3s;
    }
    
    .my-review-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 0.5rem 1.5rem rgba(0, 0, 0, 0.1) !important;
    }
    
    .comment-content {
        line-height: 1.6;
    }
    
    .rating {
        white-space: nowrap;
    }
    
    .btn-sm {
        padding: 0.25rem 0.5rem;
        font-size: 0.8rem;
        border-radius: 0.375rem;
    }
</style>
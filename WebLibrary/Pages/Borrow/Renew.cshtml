@page
@model WebLibrary.Pages.Borrow.RenewModel
@{
    ViewData["Title"] = "续借图书";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-arrow-repeat me-2"></i>续借图书</h2>
        <a href="/Borrow/Dashboard" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>返回借阅服务
        </a>
    </div>

    <!-- 操作结果消息 -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model.BorrowRecords.Any())
    {
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>续借说明</h5>
            </div>
            <div class="card-body">
                <ul class="mb-0">
                    <li>每本图书最多可续借 <strong>2次</strong></li>
                    <li>每次续借可延长 <strong>15天</strong></li>
                    <li>只能在应还日期前 <strong>10天</strong>内续借</li>
                    <li>逾期图书不能续借，请先归还</li>
                </ul>
            </div>
        </div>

        <div class="card border-0 shadow-sm mt-4">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>图书信息</th>
                                <th>副本编号</th>
                                <th>借阅日期</th>
                                <th>应还日期</th>
                                <th>续借次数</th>
                                <th>续借状态</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var record in Model.BorrowRecords)
                        {
                            <tr class="@(record.IsOverdue ? "table-danger" : "")">
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-light rounded p-2 me-3">
                                            <i class="bi bi-book fs-3 text-primary"></i>
                                        </div>
                                        <div>
                                            <h6 class="mb-1">@record.BookTitle</h6>
                                            <small class="text-muted">@record.Author</small>
                                        </div>
                                    </div>
                                </td>
                                <td>@record.CopyId</td>
                                <td>@record.BorrowDate.ToString("yyyy-MM-dd")</td>
                                <td class="fw-bold @(record.IsOverdue ? "text-danger" : "")">
                                    @record.DueDate.ToString("yyyy-MM-dd")
                                    @if (record.IsOverdue)
                                    {
                                        <span class="badge bg-danger ms-2">逾期</span>
                                    }
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <span class="fw-bold">@record.RenewTimes / 2</span>
                                        @if (record.RenewTimes > 0)
                                        {
                                            <span class="ms-1 text-success">
                                                <i class="bi bi-check-circle"></i>
                                            </span>
                                        }
                                    </div>
                                </td>
                                <td>
                                    @if (record.CanRenew)
                                    {
                                        <span class="badge bg-success">可续借</span>
                                    }
                                    else if (record.RenewTimes >= 2)
                                    {
                                        <span class="badge bg-secondary">已达上限</span>
                                    }
                                    else if (record.IsOverdue)
                                    {
                                        <span class="badge bg-danger">已逾期</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">未到时间</span>
                                    }
                                </td>
                                <td>
                                    @if (record.CanRenew)
                                    {
                                        <form method="post" asp-page-handler="RenewBook" style="display: inline;">
                                            <input type="hidden" name="recordId" value="@record.RecordId" />
                                            <button type="submit" class="btn btn-sm btn-warning">
                                                <i class="bi bi-arrow-repeat me-1"></i> 续借
                                            </button>
                                        </form>
                                    }
                                    else if (record.RenewTimes >= 2)
                                    {
                                        <button class="btn btn-sm btn-secondary" disabled>
                                            <i class="bi bi-arrow-repeat me-1"></i> 不可续借
                                        </button>
                                    }
                                    else if (record.IsOverdue)
                                    {
                                        <button class="btn btn-sm btn-outline-danger" disabled>
                                            <i class="bi bi-exclamation-triangle me-1"></i> 已逾期
                                        </button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-sm btn-outline-secondary" disabled>
                                            <i class="bi bi-clock me-1"></i> 未到时间
                                        </button>
                                    }
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="mt-4 d-flex justify-content-between align-items-center">
            <div class="text-muted">
                共 <strong>@Model.BorrowRecords.Count</strong> 条借阅记录
            </div>
            <div>
                <a href="/Books" class="btn btn-outline-primary">
                    <i class="bi bi-search me-1"></i> 继续借阅
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                <i class="bi bi-book text-muted" style="font-size: 4rem;"></i>
                <h4 class="mt-3">您当前没有可续借的图书</h4>
                <p class="text-muted mb-4">所有图书都已归还或不符合续借条件</p>
                <a href="/Books" class="btn btn-primary">
                    <i class="bi bi-search me-1"></i> 浏览图书
                </a>
            </div>
        </div>
    }
</div>

<script>
     setTimeout(function () {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => alert.remove());
        }, 5000);
</script>
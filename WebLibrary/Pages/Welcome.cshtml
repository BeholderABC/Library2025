@page
@model WebLibrary.Pages.WelcomeModel
@{
	Layout = null;
}

<!doctype html>
<html>
<head>
    <title>欢迎使用月落书院线上系统</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-image: url('/images/wel_bg.JPG');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            background-attachment: fixed;
            font-family: "SimSun", "宋体", serif;
        }
        .text-center {
            background-color: rgba(255, 255, 255, 0.9);
            padding: 3rem;
            border-radius: 15px;
            backdrop-filter: blur(5px);
            position: absolute;
            right: 10%;
            top: 50%;
            transform: translateY(-50%);
            min-width: 350px;
        }
        .btn {
            font-size: 1.2rem;
            padding: 12px 30px;
            margin: 10px 0;
            width: 100%;
            max-width: 250px;
        }
        h2 {
            font-family: "SimSun", "宋体", serif;
            font-weight: bold;
        }
        p {
            font-family: "SimSun", "宋体", serif;
        }
    </style>
</head>
<body class="d-flex align-items-center justify-content-center" style="height:100vh;">
    <div class="text-center">
        <h2 class="mb-4">欢迎使用月落书院线上系统</h2>
        <div class="d-flex flex-column align-items-center">
            <a class="btn btn-primary mb-3" href="/Account/Login">登录</a>
            <a class="btn btn-secondary mb-3" href="/Account/Register">注册</a>
        </div>
        <p class="mt-3 text-muted">第一次使用本系统？请先 <a href="/Account/Register">注册账号</a> 再登录。</p>
    </div>
    <script src="/js/notify.js"></script>
</body>
</html>
@page "{id:long}"
@model WebLibrary.Pages.Notification.ReceivedNotificationDetailModel
@{
    ViewData["Title"] = "通知详情";
}

<section class="section-full">
    <div class="section-inner">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="h4 text-primary mb-0"><i class="bi bi-file-text-fill me-2"></i>通知详情</h1>
                <small class="text-muted">查看消息全文与时间</small>
            </div>
            <div>
                <a asp-page="./ReceivedNotifications" class="btn btn-outline-secondary me-2">
                    <i class="bi bi-arrow-left me-1"></i> 返回列表
                </a>
                @* 如果以后需要“标为已读”功能，可将下面按钮解除注释并实现后端处理 *@
                @* <form method="post" asp-page-handler="MarkRead" class="d-inline">
                       <button class="btn btn-primary"><i class="bi bi-check2-all me-1"></i> 标为已读</button>
                   </form> *@
            </div>
        </div>

        <div class="white-rectangle">
            <div class="rectangle-content">
                <div class="mb-3 detail-meta d-flex align-items-center gap-3">
                    <div class="meta-item d-flex align-items-center">
                        <i class="bi bi-clock me-2 text-muted"></i>
                        <div>
                            <div class="small text-muted">时间</div>
                            <div>@Model.CreateTime.ToString("yyyy-MM-dd HH:mm")</div>
                        </div>
                    </div>

                    @* 可扩展其它元信息，例如发送者/状态（如果模型包含） *@
                    @* <div class="meta-item d-flex align-items-center">
                        <i class="bi bi-person me-2 text-muted"></i>
                        <div>
                            <div class="small text-muted">发送者</div>
                            <div>@Model.SenderName</div>
                        </div>
                    </div> *@
                </div>

                <hr />

                <div class="content-box">
                    <h5 class="mb-3">内容预览</h5>
                    <div class="content-body">
                        @Html.Raw(System.Net.WebUtility.HtmlEncode(Model.Content).Replace("\n", "<br/>"))
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-3 text-muted small">
            <i class="bi bi-info-circle me-1"></i> 如果通知中包含操作链接或更多信息，请按照页面提示操作。
        </div>
    </div>
</section>

<style>
    /* 白色卡片风格（若已在全局样式中定义，可删除重复项） */
    .white-rectangle {
        background: #fff;
        border-radius: 0.6rem;
        box-shadow: 0 6px 18px rgba(23, 43, 77, 0.06);
        padding: 1rem;
    }

    .rectangle-content {
        padding: 0.5rem;
    }

    .detail-meta .meta-item + .meta-item {
        margin-left: 1.5rem;
    }

    .detail-meta .small {
        font-size: 0.75rem;
    }

    .content-box h5 {
        font-weight: 600;
    }

    .content-body {
        white-space: pre-wrap; /* 保留换行 */
        word-break: break-word;
        color: #1f2937;
        line-height: 1.6;
        background: #f8fafc;
        padding: 1rem;
        border-radius: 0.5rem;
        border: 1px solid #eef2f7;
    }

    .btn-outline-secondary i,
    .btn-primary i {
        vertical-align: -2px;
    }

   
</style>
